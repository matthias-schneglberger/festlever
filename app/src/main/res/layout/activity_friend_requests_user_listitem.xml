<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/activity_friend_requests_user_listitem_username"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:text="Benutzername" />

    <Button
        android:id="@+id/activity_friend_requests_user_listitem_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#4DD82F"
        android:textColor="#FFFFFF"
        android:text="Annehmen" />

    <Button
        android:id="@+id/activity_friend_requests_user_listitem_reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#D60000"
        android:textColor="#FFFFFF"
        android:layout_weight="1"
        android:text="Ablehnen" />
</LinearLayout>